{
    "tableName": "wikipedia",
    "tableType": "REALTIME",
    "segmentsConfig": {
      "timeColumnName": "ts",
      "schemaName": "wikipedia",
      "replicasPerPartition": "1"
    },
    "tenants": {},
    "tableIndexConfig": {
      "streamConfigs": {
        "streamType": "kafka",
        "stream.kafka.topic.name": "wiki-events",
        "stream.kafka.broker.list": "redpanda:29092",
        "stream.kafka.consumer.type": "lowlevel",
        "stream.kafka.consumer.prop.auto.offset.reset": "smallest",
        "stream.kafka.consumer.factory.class.name": 
          "org.apache.pinot.plugin.stream.kafka20.KafkaConsumerFactory",
        "stream.kafka.decoder.class.name": 
          "org.apache.pinot.plugin.stream.kafka.KafkaJSONMessageDecoder",
          "realtime.segment.flush.threshold.rows": "1000",
          "realtime.segment.flush.threshold.time": "24h",
          "realtime.segment.flush.segment.size": "100M"
      }
    },
    "metadata": {},
    "ingestionConfig": {
      "transformConfigs": [
        {
          "columnName": "id",
          "transformFunction": "JSONPATH(meta, '$.id')"
        },
        {
          "columnName": "stream",
          "transformFunction": "JSONPATH(meta, '$.stream')"
        },
        {
          "columnName": "domain",
          "transformFunction": "JSONPATH(meta, '$.domain')"
        },
        {
          "columnName": "topic",
          "transformFunction": "JSONPATH(meta, '$.topic')"
        },
        {
          "columnName": "uri",
          "transformFunction": "JSONPATH(meta, '$.uri')"
        },
        {
          "columnName": "ts",
          "transformFunction": "\"timestamp\" * 1000"
        }
      ]
    }
  }